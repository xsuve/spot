{
  "compilerOptions": {
    "outDir": "./build/",
    "noImplicitAny": true,
    "module": "ESNext",
    "target": "ESNext",
    "jsx": "react",
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "Node",
    "downlevelIteration": true,
    "lib": [
      "ESNext", "DOM", "DOM.Iterable"
    ],
    "paths": {
      "@/*": [
        "./src/*"
      ]
    }
  }
}
